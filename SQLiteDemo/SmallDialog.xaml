<Window x:Class="SQLiteDemo.SmallDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLiteDemo"
        mc:Ignorable="d"
        Title="" Height="100" Width="300" MinHeight="100" ResizeMode="NoResize">
    <Grid Margin="10">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock x:Name="DialogTextBlock" VerticalAlignment="Bottom" HorizontalAlignment="Center" TextWrapping="Wrap"/>
            <Button x:Name="confirmBtn" Height="20" Width="40" Content="Ok" Margin="0 5 0 0" VerticalAlignment="Bottom" HorizontalAlignment="Center" Click="confirmBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
